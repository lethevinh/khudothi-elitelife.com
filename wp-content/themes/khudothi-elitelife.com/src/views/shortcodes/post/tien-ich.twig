{% for post in posts %}
<div class="single_portfolio">
    <a href="{{ post.link }}">
        <div class="box">
            <img src="{{ post.thumbnail.src }}" alt="">
        </div>
    </a>
    <a href="{{ post.link }}">
        <p class=" " style="color: #E0CF79;font-family: 'UTM AvoBold',sans-serif;font-size: 15px">
            {{ post.title }}
        </p>
        <p class="text-white">
            {{ post.post_excerpt }}
        </p>
    </a>
</div>
{% endfor %}